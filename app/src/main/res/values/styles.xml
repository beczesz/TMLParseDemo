<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/card_text_color</item>
    </style>

    <style name="CardTitle" parent="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_margin">@dimen/padding_tiny</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="CardDescription" parent="Text">
        <item name="android:layout_margin">@dimen/padding_tiny</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>

    </style>

    <style name="Button">
        <item name="android:padding">@dimen/padding_default</item>
    </style>

</resources>
